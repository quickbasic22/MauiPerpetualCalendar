<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:page="clr-namespace:MauiPerpetualCalendar"
             x:DataType="page:YearsGrouped"
             x:Class="MauiPerpetualCalendar.YearsGrouped"
             Title="YearsGrouped">
    <StackLayout>
        <CollectionView ItemsSource="{Binding Years}"
                        CanReorderItems="True">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="page:CalendarNumberGroup">
                    <TextCell Text="{Binding YearGroup}" Detail="{Binding Years}" TextColor="Blue" DetailColor="LightBlue" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>