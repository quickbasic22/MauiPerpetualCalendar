<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mainpage="clr-namespace:MauiPerpetualCalendar"
             x:DataType="mainpage:MainPage"
             x:Class="MauiPerpetualCalendar.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="Enter Year" />
            <Entry x:Name="entryNumber" Text="1973" Placeholder="Enter Year" />
            <Label x:Name="AnswerLabel" Text="{Binding CalendarNumber}" FontSize="Large" BackgroundColor="Blue" TextColor="LightPink" />
            <Button Text="Get Calendar Number" Clicked="Button_Clicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
