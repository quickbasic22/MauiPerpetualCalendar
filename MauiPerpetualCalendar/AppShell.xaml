<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiPerpetualCalendar.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiPerpetualCalendar"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:CalendarNumberToYears}"
        Route="CalendarNumbers" />
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:PerpetualCalendar}"
        Route="PerpetualCalendar" />
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
